// Define a function to display the house cards on the web page
function displayHouses() {
  // Get the main element where the cards will be appended
  var main = document.querySelector(".main");

  // Loop through the houses array and create the card elements for each house object
  for (var i = 0; i < houses.length; i++) {
    // Create a card element
    var card = document.createElement("div");
    card.className = "card";

    // Create an image element
    var image = document.createElement("img");
    image.src = houses[i].image;
    image.alt = houses[i].title;
    image.className = "card-image";

    // Create a content element
    var content = document.createElement("div");
    content.className = "card-content";

    // Create a title element
    var title = document.createElement("div");
    title.textContent = houses[i].title;
    title.className = "card-title";

    // Create a description element
    var description = document.createElement("div");
    description.textContent = houses[i].description;
    description.className = "card-description";

    // Create a price element
    var price = document.createElement("div");
    price.textContent = houses[i].price;
    price.className = "card-price";

    // Create a rating element
    var rating = document.createElement("div");
    rating.className = "card-rating";

    // Loop through the rating value and create star elements
    for (var j = 0; j < 5; j++) {
      // Create a star element
      var star = document.createElement("img");
      star.className = "star";

      // Set the star image source based on the rating value
      if (j < houses[i].rating) {
        // If the rating is a whole number, use a full star image
        if (houses[i].rating % 1 === 0) {
          star.src = "star.png";
        }
        // If the rating is a decimal number, use a half star image for the last star
        else if (j === Math.floor(houses[i].rating)) {
          star.src = "star-half.png";
        }
        // Otherwise, use a full star image
        else {
          star.src = "star.png";
        }
      }
      // If the rating is lower than the star index, use an empty star image
      else {
        star.src = "star-empty.png";
      }

      // Append the star element to the rating element
      rating.appendChild(star);
    }

    // Append the title, description, price, and rating elements to the content element
    content.appendChild(title);
    content.appendChild(description);
    content.appendChild(price);
    content.appendChild(rating);

    // Append the image and content elements to the card element
    card.appendChild(image);
    card.appendChild(content);

    // Append the card element to the main element
    main.appendChild(card);
  }
}

// Call the displayHouses function when the web page is loaded
window.onload = displayHouses;
